<%- include('../partials/header') %>

<div class="container mx-auto px-4 py-8 mt-16">
  <div class="max-w-4xl mx-auto">
    <div class="flex items-center mb-6">
      <a href="/blog" class="text-secondary hover:text-primary transition mr-3">
        <i class="fas fa-arrow-left"></i>
      </a>
      <h1 class="text-3xl font-bold text-secondary">Write a Blog Post</h1>
    </div>

    <div class="bg-white rounded-lg shadow-md p-6">
      <form action="/blog" method="POST">
        <div class="mb-6">
          <label for="title" class="block text-secondary font-medium mb-2"
            >Title</label
          >
          <input
            type="text"
            id="title"
            name="title"
            required
            class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-primary focus:border-transparent"
            placeholder="Enter a catchy title for your blog post"
          />
        </div>

        <div class="mb-6">
          <label
            for="bookReference"
            class="block text-secondary font-medium mb-2"
            >Book Reference (Optional)</label
          >
          <select
            id="bookReference"
            name="bookReference"
            class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-primary focus:border-transparent"
          >
            <option value="">Select a book (optional)</option>
            <% books.forEach(book => { %>
            <option value="<%= book._id %>">
              <%= book.title %> by <%= book.author %>
            </option>
            <% }) %>
          </select>
          <p class="text-sm text-text-light mt-1">
            If your blog post is about a specific book, select it here.
          </p>
        </div>

        <div class="mb-6">
          <label for="content" class="block text-secondary font-medium mb-2"
            >Content</label
          >
          <textarea
            id="content"
            name="content"
            required
            rows="12"
            class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-primary focus:border-transparent"
            placeholder="Write your blog post here..."
          ></textarea>
          <p class="text-sm text-text-light mt-1">
            Write your thoughts, reviews, or insights. You can use markdown for
            formatting.
          </p>
        </div>

        <div class="flex justify-end">
          <a
            href="/blog"
            class="px-6 py-2 border border-gray-300 rounded-lg text-secondary mr-3 hover:bg-gray-50 transition"
          >
            Cancel
          </a>
          <button
            type="submit"
            class="px-6 py-2 bg-primary text-secondary font-semibold rounded-lg hover:bg-primary-dark transition"
          >
            Publish Blog
          </button>
        </div>
      </form>
    </div>
  </div>
</div>

<%- include('../partials/footer') %>
