</section>

<!-- Featured Books Section -->
<section class="py-16 bg-gray-50">
  <div class="container mx-auto px-4">
    <div class="flex justify-between items-center mb-8">
      <h2 class="text-3xl font-bold text-secondary">Featured Books</h2>
      <a href="/books" class="text-primary hover:text-primary-dark font-medium">
        View All <i class="fas fa-arrow-right ml-1"></i>
      </a>
    </div>

    <div
      class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-6"
    >
      <% if (featuredBooks && featuredBooks.length > 0) { %> <%
      featuredBooks.forEach(book => { %>
      <div
        class="bg-white rounded-lg overflow-hidden shadow-md hover:shadow-lg transition duration-300"
      >
        <a href="/book/<%= book._id %>" class="block relative overflow-hidden">
          <img
            src="<%= book.coverImage %>"
            alt="<%= book.title %>"
            class="w-full h-64 object-cover transition-transform duration-300 hover:scale-105"
          />
          <% if (book.discountPrice && book.discountPrice < book.price) { %>
          <div
            class="absolute top-2 right-2 bg-red-500 text-white text-xs px-2 py-1 rounded-full font-bold"
          >
            <%= Math.round((1 - book.discountPrice / book.price) * 100) %>% OFF
          </div>
          <% } %>
        </a>
        <div class="p-4">
          <h3
            class="font-bold text-secondary hover:text-primary transition duration-300 mb-1 line-clamp-1"
          >
            <a href="/book/<%= book._id %>"><%= book.title %></a>
          </h3>
          <p class="text-sm text-accent mb-2"><%= book.author %></p>

          <div class="flex items-center mb-2">
            <div class="flex text-yellow-400 mr-1">
              <% for(let i=0; i < 5; i++) { %>
              <i
                class="<%= i < Math.floor(book.rating) ? 'fas' : (i < book.rating ? 'fas fa-star-half-alt' : 'far') %> fa-star text-xs"
              ></i>
              <% } %>
            </div>
            <span class="text-xs text-gray-500"
              >(<%= book.totalRatings %>)</span
            >
          </div>

          <div class="flex items-center justify-between">
            <div>
              <% if (book.discountPrice && book.discountPrice < book.price) { %>
              <span class="text-primary font-bold"
                >₹<%= book.discountPrice %></span
              >
              <span class="text-gray-400 text-sm line-through ml-1"
                >₹<%= book.price %></span
              >
              <% } else { %>
              <span class="text-primary font-bold">₹<%= book.price %></span>
              <% } %>
            </div>
            <a
              href="/cart/add/<%= book._id %>"
              class="text-primary hover:text-primary-dark transition"
            >
              <i class="fas fa-shopping-cart"></i>
            </a>
          </div>
        </div>
      </div>
      <% }) %> <% } else { %>
      <div class="col-span-full text-center py-8">
        <p class="text-text-light">
          No featured books available at the moment. Check back soon!
        </p>
      </div>
      <% } %>
    </div>
  </div>
</section>

<!-- Community Section -->
<section class="py-16">
  <div class="container mx-auto px-4">
    <h2 class="text-3xl font-bold text-center text-secondary mb-4">
      Join Our Reading Community
    </h2>
    <p class="text-center text-text-light max-w-3xl mx-auto mb-12">
      Connect with fellow readers, share your thoughts, and discover your next
      favorite book.
    </p>

    <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
      <!-- Blog Highlights -->
      <div class="rounded-lg bg-white shadow-md overflow-hidden">
        <div class="bg-secondary/90 text-white py-4 px-6">
          <h3 class="text-xl font-bold">Latest From The Blog</h3>
        </div>
        <div class="p-6">
          <% if (latestBlogs && latestBlogs.length > 0) { %>
          <div class="space-y-6">
            <% latestBlogs.forEach(blog => { %>
            <div class="flex items-start">
              <div
                class="w-16 h-16 rounded-lg overflow-hidden flex-shrink-0 mr-4"
              >
                <img
                  src="<%= blog.coverImage || '/images/blog-default.jpg' %>"
                  alt="<%= blog.title %>"
                  class="w-full h-full object-cover"
                />
              </div>
              <div>
                <h4
                  class="font-semibold text-secondary hover:text-primary transition"
                >
                  <a href="/blog/<%= blog._id %>"><%= blog.title %></a>
                </h4>
                <p class="text-sm text-text-light mb-1">
                  <span class="mr-2">By <%= blog.author.name %></span> •
                  <span class="ml-2"
                    ><%= new Date(blog.createdAt).toLocaleDateString('en-US', {
                    day: 'numeric', month: 'short', year: 'numeric' }) %></span
                  >
                </p>
                <p class="text-sm text-text-light line-clamp-1">
                  <%= blog.content.substring(0, 120) %>...
                </p>
              </div>
            </div>
            <% }) %>
          </div>
          <div class="mt-6 text-center">
            <a
              href="/blog"
              class="inline-block bg-secondary/10 text-secondary font-medium px-6 py-2 rounded-lg hover:bg-secondary/20 transition"
            >
              View All Posts
            </a>
          </div>
          <% } else { %>
          <div class="text-center py-8">
            <p class="text-text-light mb-4">
              No blog posts yet. Be the first to share your thoughts!
            </p>
            <a
              href="/blog/new"
              class="inline-block bg-secondary/10 text-secondary font-medium px-6 py-2 rounded-lg hover:bg-secondary/20 transition"
            >
              Write a Blog Post
            </a>
          </div>
          <% } %>
        </div>
      </div>

      <!-- Recommendation Lists -->
      <div class="rounded-lg bg-white shadow-md overflow-hidden">
        <div class="bg-primary/90 text-secondary py-4 px-6">
          <h3 class="text-xl font-bold">Top Recommendation Lists</h3>
        </div>
        <div class="p-6">
          <% if (topLists && topLists.length > 0) { %>
          <div class="space-y-6">
            <% topLists.forEach(list => { %>
            <div class="flex items-start">
              <div
                class="w-10 h-10 rounded-full overflow-hidden flex-shrink-0 mr-4"
              >
                <img
                  src="<%= list.creator.avatar || '/images/avatar-default.jpg' %>"
                  alt="<%= list.creator.name %>"
                  class="w-full h-full object-cover"
                />
              </div>
              <div class="flex-1">
                <h4
                  class="font-semibold text-secondary hover:text-primary transition"
                >
                  <a href="/recommendations/<%= list._id %>"
                    ><%= list.title %></a
                  >
                </h4>
                <p class="text-sm text-text-light mb-1">
                  By <%= list.creator.name %> • <%= list.books.length %> books
                </p>
                <p class="text-sm text-text-light line-clamp-2">
                  <%= list.description %>
                </p>
                <div class="flex items-center mt-2 text-sm">
                  <span class="flex items-center text-primary mr-3">
                    <i class="fas fa-thumbs-up mr-1"></i>
                    <span><%= list.upvotes %></span>
                  </span>
                </div>
              </div>
            </div>
            <% }) %>
          </div>
          <div class="mt-6 text-center">
            <a
              href="/recommendations"
              class="inline-block bg-primary/10 text-primary font-medium px-6 py-2 rounded-lg hover:bg-primary/20 transition"
            >
              View All Lists
            </a>
          </div>
          <% } else { %>
          <div class="text-center py-8">
            <p class="text-text-light mb-4">
              No recommendation lists yet. Create your own curated book list!
            </p>
            <a
              href="/recommendations/new"
              class="inline-block bg-primary/10 text-primary font-medium px-6 py-2 rounded-lg hover:bg-primary/20 transition"
            >
              Create a List
            </a>
          </div>
          <% } %>
        </div>
      </div>
    </div>
  </div>
</section>

<!-- CTA Section -->
<section
  class="bg-gradient-to-r from-primary to-primary/80 text-secondary py-16"
>
  <div class="container mx-auto px-4 text-center">
    <h2 class="text-3xl font-bold mb-4">Start Your Reading Journey Today</h2>
    <p class="text-xl mb-8 max-w-2xl mx-auto">
      Join thousands of book lovers on BOOKSHELF and discover your next great
      read.
    </p>
    <div class="flex flex-col sm:flex-row gap-4 justify-center">
      <a
        href="/auth/register"
        class="bg-secondary text-white font-bold py-3 px-6 rounded-lg hover:bg-secondary/90 transition duration-300"
      >
        Create an Account
      </a>
      <a
        href="/books"
        class="bg-white text-secondary font-bold py-3 px-6 rounded-lg hover:bg-gray-100 transition duration-300"
      >
        Browse Books
      </a>
    </div>
  </div>
</section>

<%- include('partials/footer') %>
