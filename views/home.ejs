<%- include('partials/header') %>

<!-- Hero Section -->
<section
  class="relative overflow-hidden bg-gradient-to-r from-secondary to-secondary/80 py-20 text-white"
>
  <div class="container mx-auto px-4 relative z-10">
    <div class="max-w-3xl">
      <h1 class="text-4xl md:text-5xl font-bold mb-4">
        Discover Your Next Great Read
      </h1>
      <p class="text-xl mb-8">
        Where Books Meet Community. Join us to buy, sell, share, and connect
        over your favorite books.
      </p>
      <p class="text-lg italic mb-6">"Read. Share. Grow Together."</p>
      <div class="flex flex-col sm:flex-row gap-4">
        <a
          href="/books"
          class="bg-primary text-secondary font-bold py-3 px-6 rounded-lg hover:bg-primary-dark transition duration-300 text-center"
        >
          Browse Books
        </a>
        <a
          href="/auth/register"
          class="bg-white text-secondary font-bold py-3 px-6 rounded-lg hover:bg-gray-100 transition duration-300 text-center"
        >
          Join BOOKSHELF
        </a>
      </div>
    </div>
  </div>
  <div class="absolute right-0 bottom-0 w-1/3 h-full opacity-10">
    <img
      src="/images/book-pattern.png"
      alt="Book Pattern"
      class="w-full h-full object-cover"
    />
  </div>
</section>

