<%- include('../partials/header') %>

<div class="container mx-auto px-4 py-8">
  <div class="max-w-lg mx-auto bg-white rounded-lg shadow-md p-8 text-center">
    <div class="bg-green-100 p-4 rounded-full inline-flex mb-6">
      <i class="fas fa-check-circle text-4xl text-green-500"></i>
    </div>
    
    <h1 class="text-3xl font-bold mb-4">Subscription Activated!</h1>
    <p class="text-gray-600 mb-6">
      Thank you for subscribing to the <%= planName %> plan. Your subscription is now active.
    </p>
    
    <div class="bg-gray-50 rounded-lg p-4 text-left mb-6">
      <div class="flex justify-between mb-2">
        <span class="text-gray-600">Plan:</span>
        <span class="font-medium"><%= planName %></span>
      </div>
      <div class="flex justify-between mb-2">
        <span class="text-gray-600">Start Date:</span>
        <span class="font-medium"><%= new Date(subscription.startDate).toLocaleDateString() %></span>
      </div>
      <div class="flex justify-between">
        <span class="text-gray-600">Next Renewal:</span>
        <span class="font-medium"><%= new Date(subscription.renewalDate).toLocaleDateString() %></span>
      </div>
    </div>
    
    <div class="space-y-4">
      <a href="/library" class="block w-full bg-primary text-dark px-6 py-3 rounded-md hover:bg-opacity-90 transition">
        Go to My Library
      </a>
      <a href="/buyer/browse" class="block w-full bg-gray-200 text-dark px-6 py-3 rounded-md hover:bg-gray-300 transition">
        Browse Books
      </a>
    </div>
  </div>
</div>

<%- include('../partials/footer') %>