  <!-- Hero Section -->
  <div class="text-center mb-12">
    <h1 class="text-4xl font-bold mb-4 text-dark">About BOOKSHELF</h1>
    <p class="text-xl text-gray-600 max-w-3xl mx-auto">
      Where Books Meet Community - Connecting book lovers with the perfect reads
      since 2023
    </p>
    <p class="text-lg italic text-gray-600 mt-2">
      "Read. Share. Grow Together."
