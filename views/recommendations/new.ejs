<%- include('../partials/header') %>

<div class="container mx-auto px-4 py-8 mt-16">
  <div class="max-w-4xl mx-auto">
    <div class="flex items-center mb-6">
      <a
        href="/recommendations"
        class="text-secondary hover:text-primary transition mr-3"
      >
        <i class="fas fa-arrow-left"></i>
      </a>
      <h1 class="text-3xl font-bold text-secondary">
        Create a Recommendation List
      </h1>
    </div>

    <div class="bg-white rounded-lg shadow-md p-6">
      <form action="/recommendations" method="POST">
        <div class="mb-6">
          <label for="title" class="block text-secondary font-medium mb-2"
            >List Title</label
          >
          <input
            type="text"
            id="title"
            name="title"
            required
            class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-primary focus:border-transparent"
            placeholder="Enter a title for your book list"
          />
        </div>

        <div class="mb-6">
          <label for="description" class="block text-secondary font-medium mb-2"
            >Description</label
          >
          <textarea
            id="description"
            name="description"
            required
            rows="4"
            class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-primary focus:border-transparent"
            placeholder="Describe your book list..."
          ></textarea>
          <p class="text-sm text-text-light mt-1">
            Explain the theme or purpose of your list to help others discover
            it.
          </p>
        </div>

        <div class="mb-6">
          <label class="block text-secondary font-medium mb-2"
            >Choose Books</label
          >
          <div
            class="border border-gray-300 rounded-lg p-4 max-h-60 overflow-y-auto"
          >
            <div class="grid grid-cols-1 md:grid-cols-2 gap-3">
              <% books.forEach(book => { %>
              <div
                class="flex items-center p-2 border border-gray-200 rounded-md"
              >
                <input
                  type="checkbox"
                  id="book-<%= book._id %>"
                  name="books"
                  value="<%= book._id %>"
                  class="mr-3 h-5 w-5 accent-primary"
                />
                <label
                  for="book-<%= book._id %>"
                  class="flex items-center flex-grow cursor-pointer"
                >
                  <img
                    src="<%= book.coverImage %>"
                    alt="<%= book.title %>"
                    class="w-10 h-14 object-cover mr-3"
                  />
                  <div>
                    <p class="font-medium text-secondary line-clamp-1">
                      <%= book.title %>
                    </p>
                    <p class="text-sm text-text-light line-clamp-1">
                      <%= book.author %>
                    </p>
                  </div>
                </label>
              </div>
              <% }) %>
            </div>
          </div>
          <p class="text-sm text-text-light mt-1">
            Select the books you want to include in your recommendation list.
          </p>
        </div>

        <div class="mb-6">
          <div class="flex items-center">
            <input
              type="checkbox"
              id="isPublic"
              name="isPublic"
              checked
              class="mr-2 h-5 w-5 accent-primary"
            />
            <label for="isPublic" class="text-secondary"
              >Make this list public</label
            >
          </div>
          <p class="text-sm text-text-light mt-1 ml-7">
            Public lists can be seen by all users. Private lists are only
            visible to you.
          </p>
        </div>

        <div class="flex justify-end">
          <a
            href="/recommendations"
            class="px-6 py-2 border border-gray-300 rounded-lg text-secondary mr-3 hover:bg-gray-50 transition"
          >
            Cancel
          </a>
          <button
            type="submit"
            class="px-6 py-2 bg-primary text-secondary font-semibold rounded-lg hover:bg-primary-dark transition"
          >
            Create List
          </button>
        </div>
      </form>
    </div>
  </div>
</div>

<%- include('../partials/footer') %>
