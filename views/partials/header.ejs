<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= title %></title>
  <!-- Favicon -->
  <link rel="icon" type="image/png" href="/img/favicon.png">
  <!-- Tailwind CSS -->
  <script src="https://cdn.tailwindcss.com"></script>
  <script>
    tailwind.config = {
      theme: {
        extend: {
          colors: {
            primary: '#ffe619',
            secondary: '#ffffff',
            dark: '#333333',
            light: '#f5f5f5',
            accent: '#ff4500'
          },
          fontFamily: {
            sans: ['Inter', 'sans-serif']
          }
        }
      }
    }
  </script>
  <!-- Font Awesome -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
  <!-- Custom CSS -->
  <link rel="stylesheet" href="/css/style.css">
</head>
<body class="flex flex-col min-h-screen bg-light">
  <!-- Top Bar -->
  <div class="bg-dark text-white py-2 px-4">
    <div class="container mx-auto flex justify-between items-center">
      <div class="flex items-center space-x-4">
        <a href="/contact" class="text-sm hover:text-primary">
          <i class="fas fa-phone-alt mr-1"></i> +91 8530206759
        </a>
        <a href="/contact" class="text-sm hover:text-primary hidden md:inline-block">
          <i class="fas fa-envelope mr-1"></i> support@bookish.in
        </a>
      </div>
      <div class="flex items-center space-x-4">
        <% if (user) { %>
          <span class="text-sm">Welcome, <%= user.name %></span>
          <a href="/auth/logout" class="text-sm hover:text-primary">Logout</a>
        <% } else { %>
          <a href="/auth/login" class="text-sm hover:text-primary">Login</a>
          <a href="/auth/register" class="text-sm hover:text-primary">Register</a>
        <% } %>
      </div>
    </div>
  </div>

  <!-- Header -->
  <header class="bg-primary shadow-md">
    <div class="container mx-auto px-4 py-4">
      <div class="flex justify-between items-center">
        <!-- Logo -->
        <a href="/" class="flex items-center">
          <img src="/img/logo.png" alt="Bookish Logo" class="h-10 mr-2">
          <span class="text-2xl font-bold text-dark">Bookish</span>
        </a>
        
        <!-- Search Bar -->
        <div class="hidden md:block flex-grow mx-8">
          <form action="/buyer/browse" method="GET" class="flex">
            <input type="text" name="search" placeholder="Search by title, author, or ISBN..." class="w-full px-4 py-2 rounded-l-md focus:outline-none">
            <button type="submit" class="bg-dark text-white px-4 py-2 rounded-r-md hover:bg-opacity-90">
              <i class="fas fa-search"></i>
            </button>
          </form>
        </div>
        
        <!-- Navigation Icons -->
        <div class="flex items-center space-x-4">
          <% if (user) { %>
            <% if (user.role === 'buyer') { %>
              <a href="/buyer/cart" class="text-dark hover:text-accent relative">
                <i class="fas fa-shopping-cart text-xl"></i>
                <span id="cart-count" class="absolute -top-2 -right-2 bg-accent text-white rounded-full w-5 h-5 flex items-center justify-center text-xs">0</span>
              </a>
              <a href="/buyer/library" class="text-dark hover:text-accent">
                <i class="fas fa-book text-xl"></i>
              </a>
            <% } %>
            <div class="relative group">
              <button class="text-dark hover:text-accent">
                <i class="fas fa-user-circle text-xl"></i>
              </button>
              <div class="absolute right-0 mt-2 w-48 bg-white rounded-md shadow-lg py-1 z-10 hidden group-hover:block">
                <% if (user.role === 'buyer') { %>
                  <a href="/buyer/browse" class="block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100">Browse Books</a>
                  <a href="/buyer/library" class="block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100">My Library</a>
                  <a href="/buyer/cart" class="block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100">My Cart</a>
                  <a href="/buyer/video-feed" class="block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100">Video Feed</a>
                <% } else if (user.role === 'seller') { %>
                  <a href="/seller/dashboard" class="block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100">Dashboard</a>
                  <a href="/seller/inventory" class="block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100">Inventory</a>
                  <a href="/seller/upload" class="block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100">Upload Book</a>
                  <a href="/seller/orders" class="block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100">Orders</a>
                <% } else if (user.role === 'admin') { %>
                  <a href="/admin/users" class="block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100">User Management</a>
                  <a href="/admin/content" class="block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100">Content Moderation</a>
                  <a href="/admin/reports" class="block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100">System Reports</a>
                <% } %>
                <div class="border-t border-gray-100"></div>
                <a href="/auth/logout" class="block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100">Logout</a>
              </div>
            </div>
          <% } else { %>
            <a href="/auth/login" class="bg-dark text-white px-4 py-2 rounded-md hover:bg-opacity-90">Login</a>
            <a href="/auth/register" class="bg-white text-dark px-4 py-2 rounded-md border border-dark hover:bg-gray-100">Register</a>
          <% } %>
        </div>
      </div>
      
      <!-- Mobile Search Bar -->
      <div class="mt-4 md:hidden">
        <form action="/buyer/browse" method="GET" class="flex">
          <input type="text" name="search" placeholder="Search..." class="w-full px-4 py-2 rounded-l-md focus:outline-none">
          <button type="submit" class="bg-dark text-white px-4 py-2 rounded-r-md hover:bg-opacity-90">
            <i class="fas fa-search"></i>
          </button>
        </form>
      </div>
    </div>
  </header>

  <!-- Navigation Menu -->
  <nav class="bg-white shadow-md">
    <div class="container mx-auto px-4">
      <ul class="flex flex-wrap">
        <li><a href="/" class="block px-4 py-3 hover:text-primary">Home</a></li>
        <li><a href="/buyer/browse" class="block px-4 py-3 hover:text-primary">Browse Books</a></li>
        <li><a href="/pricing" class="block px-4 py-3 hover:text-primary">Pricing</a></li>
        <li><a href="/about" class="block px-4 py-3 hover:text-primary">About Us</a></li>
        <li><a href="/contact" class="block px-4 py-3 hover:text-primary">Contact</a></li>
      </ul>
    </div>
  </nav>

  <!-- Flash Messages -->
  <% if(typeof success_msg !== 'undefined' && success_msg.length > 0) { %>
    <div class="bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded relative container mx-auto mt-4" role="alert">
      <span class="block sm:inline"><%= success_msg %></span>
      <span class="absolute top-0 bottom-0 right-0 px-4 py-3">
        <svg class="fill-current h-6 w-6 text-green-500" role="button" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20"><title>Close</title><path d="M14.348 14.849a1.2 1.2 0 0 1-1.697 0L10 11.819l-2.651 3.029a1.2 1.2 0 1 1-1.697-1.697l2.758-3.15-2.759-3.152a1.2 1.2 0 1 1 1.697-1.697L10 8.183l2.651-3.031a1.2 1.2 0 1 1 1.697 1.697l-2.758 3.152 2.758 3.15a1.2 1.2 0 0 1 0 1.698z"/></svg>
      </span>
    </div>
  <% } %>

  <% if(typeof error_msg !== 'undefined' && error_msg.length > 0) { %>
    <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative container mx-auto mt-4" role="alert">
      <span class="block sm:inline"><%= error_msg %></span>
      <span class="absolute top-0 bottom-0 right-0 px-4 py-3">
        <svg class="fill-current h-6 w-6 text-red-500" role="button" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20"><title>Close</title><path d="M14.348 14.849a1.2 1.2 0 0 1-1.697 0L10 11.819l-2.651 3.029a1.2 1.2 0 1 1-1.697-1.697l2.758-3.15-2.759-3.152a1.2 1.2 0 1 1 1.697-1.697L10 8.183l2.651-3.031a1.2 1.2 0 1 1 1.697 1.697l-2.758 3.152 2.758 3.15a1.2 1.2 0 0 1 0 1.698z"/></svg>
      </span>
    </div>
  <% } %>

  <!-- Main Content -->
  <main class="flex-grow container mx-auto px-4 py-6">

