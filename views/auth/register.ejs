<%- include('../partials/header') %>

<div class="container mx-auto px-4 py-8">
  <div class="max-w-md mx-auto bg-white rounded-lg shadow-md overflow-hidden">
    <div class="p-6">
      <h2 class="text-2xl font-bold text-center mb-6">Create an Account</h2>
      
      <% if (typeof errors !== 'undefined' && errors.length > 0) { %>
        <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative mb-4" role="alert">
          <ul class="list-disc list-inside">
            <% errors.forEach(function(error) { %>
              <li><%= error.msg %></li>
            <% }); %>
          </ul>
        </div>
      <% } %>
      
      <form action="/auth/register" method="POST">
        <div class="mb-4">
          <label for="name" class="block text-sm font-medium text-gray-700 mb-1">Full Name</label>
          <input type="text" id="name" name="name" required class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-primary focus:border-primary">
        </div>
        
        <div class="mb-4">
          <label for="email" class="block text-sm font-medium text-gray-700 mb-1">Email Address</label>
          <input type="email" id="email" name="email" required class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-primary focus:border-primary">
        </div>
        
        <div class="mb-4">
          <label for="password" class="block text-sm font-medium text-gray-700 mb-1">Password</label>
          <input type="password" id="password" name="password" required class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-primary focus:border-primary">
          <p class="text-xs text-gray-500 mt-1">Password must be at least 6 characters long</p>
        </div>
        
        <div class="mb-4">
          <label for="password2" class="block text-sm font-medium text-gray-700 mb-1">Confirm Password</label>
          <input type="password" id="password2" name="password2" required class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-primary focus:border-primary">
        </div>
        
        <div class="mb-6">
          <label for="role" class="block text-sm font-medium text-gray-700 mb-1">Register as</label>
          <div class="grid grid-cols-2 gap-4">
            <div class="border border-gray-300 rounded-md p-4 cursor-pointer hover:border-primary transition" onclick="selectRole('buyer')">
              <input type="radio" id="buyer" name="role" value="buyer" checked class="hidden">
              <label for="buyer" class="flex flex-col items-center cursor-pointer">
                <i class="fas fa-shopping-bag text-2xl mb-2"></i>
                <span class="font-medium">Buyer</span>
                <span class="text-xs text-gray-500">I want to buy books</span>
              </label>
            </div>
            <div class="border border-gray-300 rounded-md p-4 cursor-pointer hover:border-primary transition" onclick="selectRole('seller')">
              <input type="radio" id="seller" name="role" value="seller" class="hidden">
              <label for="seller" class="flex flex-col items-center cursor-pointer">
                <i class="fas fa-store text-2xl mb-2"></i>
                <span class="font-medium">Seller</span>
                <span class="text-xs text-gray-500">I want to sell books</span>
              </label>
            </div>
          </div>
        </div>
        
        <div class="mb-6">
          <button type="submit" class="w-full bg-primary text-dark px-4 py-2 rounded-md hover:bg-opacity-90 transition">
            Register
          </button>
        </div>
        
        <div class="text-center">
          <p class="text-gray-600">Already have an account? <a href="/auth/login" class="text-primary hover:text-dark">Login</a></p>
        </div>
      </form>
    </div>
  </div>
</div>

<script>
  function selectRole(role) {
    document.getElementById('buyer').checked = role === 'buyer';
    document.getElementById('seller').checked = role === 'seller';
    
    const buyerBox = document.getElementById('buyer').parentElement;
    const sellerBox = document.getElementById('seller').parentElement;
    
    if (role === 'buyer') {
      buyerBox.classList.add('border-primary', 'bg-primary', 'bg-opacity-10');
      sellerBox.classList.remove('border-primary', 'bg-primary', 'bg-opacity-10');
    } else {
      sellerBox.classList.add('border-primary', 'bg-primary', 'bg-opacity-10');
      buyerBox.classList.remove('border-primary', 'bg-primary', 'bg-opacity-10');
    }
  }
  
  // Initialize the selected role
  document.addEventListener('DOMContentLoaded', function() {
    selectRole('buyer');
  });
</script>

<%- include('../partials/footer') %>

